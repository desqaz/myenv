HISTFILE=~/.histfile
HISTSIZE=2000
SAVEHIST=1000
bindkey -e
export WORDCHARS='*?_-.[]~=&;&%^(){}<>'

prmptcmd() { echo "$(pwd) $(date) $(history -1)" >> ~/.zsh_eternal_history }
precmd_functions=(prmptcmd)


