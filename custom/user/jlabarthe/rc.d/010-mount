mntVbox=(data Downloads Dropbox C)

for m in "${mntVbox[@]}"; do
	if [ -z "$(mount | grep /mnt/vbox/${m})" ]; then
		sudo mkdir -p /mnt/vbox/${m}
		sudo chmod a+x /mnt
		sudo chown $(id -u):$(id -g) /mnt/vbox
		sudo chown $(id -u):$(id -g) /mnt/vbox/${m}
		#sudo mount.vboxsf $m /mnt/vbox/${m} -o uid=$(id -u),gid=$(id -g),umask=022
		vmhgfs-fuse -o allow_other -o auto_unmount -o uid=$(id -u) -o gid=$(id -g) -o umask=022 .host:/$m /mnt/vbox/${m}
	fi
done

