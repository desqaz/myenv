[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
[alias]
	lg = log -M --decorate --graph
	st = status -s
	stm = status -s -uno
	di = diff
	co = checkout
	ci = commit
	pl = pull
	ps = push
	dt = difftool
	cl = clean -fdx
	llg = log --format='%Cgreen%h%Creset %Cblue[%an - %ar]%Creset %s' --graph
	boc = "!f() { \
		git branch --color=always -a -vvv | grep $(git rev-parse --short $1); \
		}; f"
	rg = grep --recurse-submodules  --line-number --column --color=auto --break
[diff]
	tool = bc3
	#tool = vi
[difftool]
	prompt = false
[difftool "bc3"]
	cmd = git_difftool_wrapper_bc "$LOCAL" "$REMOTE" "$BASE"
[difftool "vi"]
	cmd = git_difftool_wrapper_vi "$LOCAL" "$REMOTE" "$BASE"
[difftool "meld"]
	cmd = git_difftool_wrapper_meld "$LOCAL" "$REMOTE" "$BASE"
[merge]
	tool = bc3
	summary = true
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "bc3"]
	cmd = git_mergetool_wrapper_bc "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
	trustExitCode = true

[push]
	default = current
[gui]
	warndetachedcommit = true
[core]
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
