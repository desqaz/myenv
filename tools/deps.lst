cmd   BinVer="3.3.13.18981"; PkgVer="3.3.13-18981";                                   \
      ToInstall="n";                                                                  \
      dpkg-query -l bcompare >/dev/null 2>/dev/null;                                  \
      if [ $? -eq 0 ]; then                                                           \
          InstalledVer=$(dpkg-query -l bcompare | grep bcompare | awk '{print $3}');  \
          if [ "$InstalledVer" != "$PkgVer" ]; then                                   \
              ToInstall="y";                                                          \
          fi;                                                                         \
      else                                                                            \
          ToInstall="y";                                                              \
      fi;                                                                             \
      if [ "$ToInstall" = "y" ]; then                                                 \
          wget -P ~/tmp http://www.scootersoftware.com/bcompare-${BinVer}_i386.deb && \
          sudo gdebi -n ~/tmp/bcompare-${BinVer}_i386.deb;                            \
      else                                                                            \
          echo "bcompare version $BinVer already installed";                          \
      fi
